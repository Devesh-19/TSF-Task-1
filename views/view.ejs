<%- include("partials/header") %>


<h1 class="view-header"> CUSTOMERS LIST </h1>

<div class='table'>
    <table>
        <tr>
            <th>Customer Name</th>
            <th>Email</th>
            <th>Balance</th>
            <th></th>
        </tr>
        <% for(let user of users){ %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email%></td>
                <td><%= user.credits%></td>
                <td><a href="/view/<%= user._id %>"><button type="button" class="btn btn-primary">Select</button></a></td>
            </tr>
        <% } %>
    </table>    
</div>


<%- include("partials/footer") %>