<%- include("partials/header") %>

    <div class="form-content">
        <div class="form-body">
            <div class="form-body1">
                <h1>Transferring From: </h1>
                <h3>Customer Name: <%= fromUser.name %></h3>
                <h3>Balance= <%= fromUser.credits %></h3>  
            </div>

            <div class="form-body2">
                <h1>Transferring To: </h1>
                <h3>Customer Name: <%= toUser.name %></h3>
                <h3>Balance= <%= toUser.credits %></h3>
            </div>

            <div class="form">
                <form action="/view/<%= fromUser._id %>/<%= toUser._id %>?_method=PUT" method="POST">
                    <label for="credits">Amount to be transferred:</label>
                    <br>
                    <input type="number" class="form-control" id="credit" name="credit" placeholder="" value="">
                    <br>
                    <div class="submit-btn">
                        <button type="submit" class="btn btn-success transfer-btn btn-lg">Transfer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

<%- include("partials/footer") %>